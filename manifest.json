{
  "manifest_version": 3,
  "name": "Github Gitbranch Generator",
  "version": "1.0.0",
  "author": "@juliankasimir",
  "description": "Gitbranch Generator Browser Extension for Github Issues",
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "alarms",
    "notifications",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/issues/*"
      ],
      "css": [
        "/components/content/content.css"
      ],
      "js": [
        "/components/content/inject.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/components/content/inject.js",
        "/components/content/utils.js",
        "/components/content/config.js",
        "/components/content/content.js",
        "/components/content/content.css",
        "/components/content/translation.json",
        "/components/content/language.js",
        "chrome-extension://eifofnljdklkhbodmfchllhppolpmkoa/content.js",
        "chrome-extension://eifofnljdklkhbodmfchllhppolpmkoa/content.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
